<!-- views/pedidos.handlebars -->
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pedidos - Bolos do Jos√©</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: #f5f5f5;
            margin: 0;
            padding: 20px;
            color: #333;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
        }
        h1 {
            color: #e67e22;
            text-align: center;
        }
        .pedido {
            background: white;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        .pedido.pendente {
            border-left: 4px solid #f39c12;
        }
        .pedido.finalizado {
            border-left: 4px solid #2ecc71;
        }
        .pedido h3 {
            margin-top: 0;
            color: #e67e22;
        }
        .info {
            margin: 5px 0;
        }
        .info strong {
            color: #7f8c8d;
        }
        .status {
            display: inline-block;
            padding: 3px 8px;
            border-radius: 3px;
            font-size: 0.9em;
            font-weight: bold;
        }
        .status-pendente {
            background: #f39c12;
            color: white;
        }
        .status-finalizado {
            background: #2ecc71;
            color: white;
        }
        .btn-finalizar {
            background: #27ae60;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 3px;
            cursor: pointer;
            margin-top: 10px;
        }
        .btn-finalizar:hover {
            background: #219653;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>üç∞ Pedidos - Bolos do Jos√©</h1>

        {{#each pedidos}}
            <div class="pedido {{#if (eq status 'pendente')}}pendente{{else}}finalizado{{/if}}">
                <h3>Pedido #{{id}} - {{bolo}}</h3>
                
                <div class="info">
                    <strong>üë§ Cliente:</strong> {{Cliente.nome}} ({{Cliente.numero}})
                </div>
                
                <div class="info">
                    <strong>‚è∞ Retirada:</strong> {{dataRetirada}}
                </div>
                
                <div class="info">
                    <strong>üìÖ Data do Pedido:</strong> {{formatDate createdAt}}
                </div>
                
                <div class="info">
                    <strong>Status:</strong>
                    <span class="status status-{{status}}">{{status}}</span>
                </div>

                {{#if (eq status 'pendente')}}
                    <a href="/finalizar/{{id}}">
                        <button class="btn-finalizar">‚úÖ Finalizar Pedido</button>
                    </a>
                {{/if}}
            </div>
        {{else}}
            <div class="pedido">
                <p>Nenhum pedido encontrado.</p>
            </div>
        {{/each}}
    </div>
</body>
</html>