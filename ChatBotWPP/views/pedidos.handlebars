<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <style>
    /* Reset e Base */
* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: #121212;
    margin: 0;
    padding: 0;
    color: #e0e0e0;
    line-height: 1.6;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

/* Cabe√ßalho - Mantendo todos os detalhes */
h1 {
    color: #ff8c00;
    text-align: center;
    margin: 20px 0 30px;
    font-size: 2.5rem;
    position: relative;
    padding-bottom: 15px;
}

h1::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 4px;
    background: linear-gradient(90deg, #ff6d00, #ff8c00);
    border-radius: 2px;
}

/* Filtros - Mantendo estrutura */
.filtros {
    margin: 30px 0;
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    justify-content: center;
}

.btn-filtro {
    padding: 10px 20px;
    background: #2d2d2d;
    border-radius: 30px;
    text-decoration: none;
    color: #bdbdbd;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    box-shadow: 0 2px 5px rgba(0,0,0,0.3);
}

.btn-filtro.ativo {
    background: linear-gradient(135deg, #ff6d00, #ff8c00);
    color: white;
    box-shadow: 0 4px 8px rgba(255, 109, 0, 0.3);
}

.btn-filtro:hover:not(.ativo) {
    background: #404040;
    transform: translateY(-2px);
}

/* Cards de Pedidos - Mantendo todos os efeitos */
.pedido {
    background: #1e1e1e;
    border-radius: 12px;
    padding: 25px;
    margin-bottom: 25px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    transition: transform 0.3s, box-shadow 0.3s;
    position: relative;
    overflow: hidden;
}

.pedido:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.3);
}

.pedido::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 5px;
    height: 100%;
}

/* Mantendo gradientes originais com ajuste de tonalidade */
.pedido.recebido::before { background: linear-gradient(to bottom, #ff6d00, #ff8c00); }
.pedido.preparando::before { background: linear-gradient(to bottom, #1e88e5, #1565c0); }
.pedido.pronto::before { background: linear-gradient(to bottom, #00c853, #009624); }
.pedido.entregue::before { background: linear-gradient(to bottom, #00acc1, #00838f); }
.pedido.cancelado::before { background: linear-gradient(to bottom, #d32f2f, #b71c1c); }

.pedido h3 {
    margin: 0 0 15px 0;
    color: #ff8c00;
    font-size: 1.4rem;
    padding-bottom: 10px;
    border-bottom: 1px solid #373737;
    display: flex;
    align-items: center;
}

.pedido h3::before {
    content: '';
    display: inline-block;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    margin-right: 10px;
}

/* Mantendo cores dos pontos */
.pedido.recebido h3::before { background: #ff8c00; }
.pedido.preparando h3::before { background: #1e88e5; }
.pedido.pronto h3::before { background: #00c853; }
.pedido.entregue h3::before { background: #00acc1; }
.pedido.cancelado h3::before { background: #d32f2f; }

.info {
    margin: 12px 0;
    display: flex;
    align-items: center;
}

.info-label {
    font-weight: 600;
    color: #9e9e9e;
    min-width: 140px;
    display: flex;
    align-items: center;
}

.info-label::before {
    margin-right: 8px;
    font-size: 1.1em;
}

/* Formul√°rio de Status - Mantendo estrutura */
.status-form {
    margin-top: 20px;
    padding-top: 20px;
    border-top: 1px dashed #373737;
}

.status-select {
    padding: 10px 15px;
    border-radius: 8px;
    border: 1px solid #373737;
    margin-right: 10px;
    min-width: 180px;
    font-size: 1em;
    background: #2d2d2d;
    color: #e0e0e0;
    cursor: pointer;
    transition: all 0.3s;
}

.status-select:focus {
    outline: none;
    border-color: #ff8c00;
    box-shadow: 0 0 0 2px rgba(255, 140, 0, 0.2);
}

.btn-atualizar {
    background: linear-gradient(135deg, #1e88e5, #1565c0);
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s;
    font-weight: 600;
    box-shadow: 0 2px 5px rgba(30, 136, 229, 0.3);
}

.btn-atualizar:hover {
    background: linear-gradient(135deg, #1565c0, #1e88e5);
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(21, 101, 192, 0.4);
}

/* Sem pedidos */
.sem-pedidos {
    text-align: center;
    padding: 50px;
    color: #9e9e9e;
    background: #1e1e1e;
    border-radius: 12px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    font-size: 1.2em;
}

/* Responsividade - Mantendo ajustes originais */
@media (max-width: 768px) {
    .container {
        padding: 15px;
    }
    
    h1 {
        font-size: 2rem;
    }
    
    .info {
        flex-direction: column;
        align-items: flex-start;
    }
    
    .info-label {
        min-width: auto;
        margin-bottom: 5px;
    }
    
    .status-form form {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }
    
    .status-select {
        width: 100%;
        margin-right: 0;
    }
    
    .btn-atualizar {
        width: 100%;
    }
}

@media (max-width: 480px) {
    .filtros {
        flex-direction: column;
        width: 100%;
    }
    
    .btn-filtro {
        width: 100%;
        text-align: center;
    }
    
    .pedido {
        padding: 20px 15px;
    }
}
    </style>
</head>
<body>
<div class="container">
    <h1>üç∞ Pedidos - Bolos do Jos√©</h1>
    
    <!-- Menu de Filtros (MANTIDO) -->
    <div class="filtros">
        <a href="/?status=todos" class="btn-filtro {{#if (eq statusFilter 'todos')}}ativo{{/if}}">Todos</a>
        <a href="/?status=recebido" class="btn-filtro {{#if (eq statusFilter 'recebido')}}ativo{{/if}}">Recebidos</a>
        <a href="/?status=preparando" class="btn-filtro {{#if (eq statusFilter 'preparando')}}ativo{{/if}}">Preparando</a>
        <a href="/?status=pronto" class="btn-filtro {{#if (eq statusFilter 'pronto')}}ativo{{/if}}">Prontos</a>
        <a href="/?status=entregue" class="btn-filtro {{#if (eq statusFilter 'entregue')}}ativo{{/if}}">Entregues</a>
        <a href="/?status=cancelado" class="btn-filtro {{#if (eq statusFilter 'cancelado')}}ativo{{/if}}">Cancelados</a>
    </div>

    <!-- Lista de Pedidos (CORRIGIDA) -->
    {{#each pedidos}}
        <div class="pedido {{status}}">
            <h3>Pedido #{{id}}{{#if bolo}} - {{bolo}}{{/if}}</h3>
            
            <div class="info">
                <span class="info-label">üë§ Cliente:</span>
                {{#if Cliente}}
                    {{Cliente.nome}} {{#if Cliente.telefone}}({{Cliente.telefone}}){{/if}}
                {{else}}
                    Cliente n√£o informado
                {{/if}}
            </div>
            
            <div class="info">
                <span class="info-label">‚è∞ Retirada:</span>
                {{#if dataRetirada}}
                    {{formatDate dataRetirada}}
                {{else}}
                    N√£o especificada
                {{/if}}
            </div>
            
            <div class="info">
                <span class="info-label">üìÖ Data do Pedido:</span>
                {{formatDate createdAt}}
            </div>
            
            <!-- Formul√°rio de Status (MANTIDO) -->
            <div class="status-form">
                <form action="/pedidos/{{id}}/status" method="POST">
                    <div class="info">
                        <span class="info-label">üîÑ Status:</span>
                        <select name="status" class="status-select">
                            <option value="recebido" {{#eq status 'recebido'}}selected{{/eq}}>‚è≥ Recebido</option>
                            <option value="preparando" {{#eq status 'preparando'}}selected{{/eq}}>üë®‚Äçüç≥ Preparando</option>
                            <option value="pronto" {{#eq status 'pronto'}}selected{{/eq}}>‚úÖ Pronto</option>
                            <option value="entregue" {{#eq status 'entregue'}}selected{{/eq}}>üöö Entregue</option>
                            <option value="cancelado" {{#eq status 'cancelado'}}selected{{/eq}}>‚ùå Cancelado</option>
                        </select>
                        <button type="submit" class="btn-atualizar">Atualizar</button>
                    </div>
                </form>
            </div>
        </div>
    {{else}}
        <div class="pedido sem-pedidos">
            <p>Nenhum pedido encontrado.</p>
        </div>
    {{/each}}
</div>

</body>
</html>